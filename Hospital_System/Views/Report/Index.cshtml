
@{
    ViewBag.Title = "Index";
}

<style>
    .cards {
        display: flex;
        position: relative;
        top: 1em;
    }

    .card.mb-3 {
        margin: 20px 40px;
        height: 350px;
    }

    .card-body {
        width: 200px;
        font-size: 88px;
        text-align: center;
        z-index: 0;
    }



    .thumbnail {
        color: #839496
    }

    .card-title {
        z-index: 1;
        position: relative;
        top: 3.9em;
        font-size: 2.5rem !important;
    }

    .card-text {
        position: relative;
        bottom: 0.5em;
    }

    .card-header {
        text-align: center;
        font-weight: bold;
    }
</style>
<h1>Reports</h1>
<div class="cards">
    <a href="" class="thumbnail " style="text-decoration: none;  ">
        <div class="card border-primary bg-dark mb-3" style="max-width: 20rem;">
            <div class="card-header">System Users</div>
            <div class="card-body">
                <h1 class="card-title">43</h1>
                <p class="card-text">
                    <i class="fa fa-users" aria-hidden="true"></i>
                    <i class="fas fa-circle-notch" style="position: relative; bottom: 20px; font-size: 110px; "></i>
                </p>
            </div>
        </div>
    </a>
    <a href="" class="thumbnail" style="text-decoration: none;  ">

        <div class="card border-secondary bg-dark mb-3" style="max-width: 20rem;">
            <div class="card-header">Patients</div>
            <div class="card-body">
                <h1 class="card-title">100</h1>
                <p class="card-text">
                    <i class="fas fa-procedures"></i>
                    <i class="fas fa-circle-notch" style="position: relative; bottom: 20px; font-size: 110px; "></i>
                </p>
            </div>
        </div>
    </a>
    <a href="" class="thumbnail" style="text-decoration: none;  ">
        <div class="card border-success mb-3 bg-dark" style="max-width: 20rem;">
            <div class="card-header">Appointments</div>
            <div class="card-body">
                <h1 class="card-title">230</h1>
                <p class="card-text">
                    <i class="far fa-calendar-plus"></i>
                    <i class="fas fa-circle-notch" style="position: relative; bottom: 20px; font-size: 110px; "></i>
                </p>
            </div>
        </div>
    </a>
    <a href="" class="thumbnail" style="text-decoration: none;  ">
        <div class="card border-danger mb-3 bg-dark" style="max-width: 20rem;">
            <div class="card-header">Doctors</div>
            <div class="card-body">
                <h1 class="card-title">38</h1>
                <p class="card-text">
                    <i class="fas fa-user-nurse"></i>
                    <i class="fas fa-circle-notch" style="position: relative; bottom: 20px; font-size: 110px; "></i>
                </p>
            </div>
        </div>
    </a>
</div>