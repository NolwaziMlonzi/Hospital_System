@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.doctorFullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.doctorPhysicalAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.doctorPhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.qualification)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.gender)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.doctorID }) |
            @Html.ActionLink("Details", "Details", new { id=item.doctorID }) |
