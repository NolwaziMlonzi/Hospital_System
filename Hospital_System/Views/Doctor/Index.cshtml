@model IEnumerable<Hospital_System.Models.Doctor>

@{
    ViewBag.Title = "Index";
}

<h2>Doctors</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.doctorFullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.doctorPhysicalAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.doctorPhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.qualification)
        </th>
